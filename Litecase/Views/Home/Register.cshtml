@{
    ViewBag.Title = "Register";
}

<div class="text-center" style="margin-bottom:30px">
    <h4><strong>Регистрация</strong></h4>
</div>
@if (ViewBag.ErrorMessage != null)
{
    <div class="text-center alert alert-warning">
        <h4>@ViewBag.ErrorMessage</h4>
    </div>
}

<div>
    <table align="center">
        <tr>
            <th>
                @using (Html.BeginForm("TryRegister", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <div class="col-md-12">
                            <h5>Ваше имя:</h5>
                            @if(ViewBag.name == null && ViewBag.mail == null)
                            {
                                <input class="form-control" type="text" name="name" />
                            }
                            else
                            {
                                <input class="form-control" type="text" name="name" value="@ViewBag.name" />
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <h5>Электронная почта:</h5>
                            @if (ViewBag.name == null && ViewBag.mail == null)
                            {
                                <input class="form-control" type="text" name="mail" />
                            }
                            else
                            {
                                <input class="form-control" type="text" name="mail" value="@ViewBag.mail" />
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <h5>Пароль:</h5>
                            <input class="form-control" type="password" name="password1" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <h5>Повторите пароль:</h5>
                            <input class="form-control" type="password" name="password2" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn" value="Регистрация" />
                        </div>
                    </div>
                }
            </th>
        </tr>
    </table>
</div>
